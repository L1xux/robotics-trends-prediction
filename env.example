# ===========================================
# AI Robotics Report Generator - 환경변수 설정
# ===========================================

# ===== 필수 설정 (Required) =====
# OpenAI API 키 (반드시 설정 필요)
OPENAI_API_KEY=your_openai_api_key_here

# ===== OpenAI 설정 (Optional - 기본값 있음) =====
# OpenAI 모델 (기본값: gpt-4o)
OPENAI_MODEL=gpt-4o

# OpenAI Temperature (기본값: 0.7)
OPENAI_TEMPERATURE=0.7

# ===== Embedding 모델 설정 (Optional) =====
# Embedding 모델 (기본값: nomic-ai/nomic-embed-text-v1.5)
EMBEDDING_MODEL=nomic-ai/nomic-embed-text-v1.5

# ===== ChromaDB 설정 (Optional) =====
# ChromaDB 경로 (기본값: data/chromadb)
CHROMADB_PATH=data/chromadb

# ChromaDB 컬렉션명 (기본값: reference_reports)
CHROMADB_COLLECTION=reference_reports

# ===== 데이터 수집 설정 (Optional) =====
# arXiv 검색 시작 날짜 (기본값: 2022-01-01)
ARXIV_START_DATE=2022-01-01

# Google Trends 검색 기간 (기본값: today 36-m)
TRENDS_TIMEFRAME=today 36-m

# 뉴스 소스 개수 (기본값: 5)
NEWS_SOURCES_COUNT=5

# ===== 품질 검사 설정 (Optional) =====
# 최대 재시도 횟수 (기본값: 3)
MAX_RETRY_COUNT=3

# 최소 arXiv 논문 수 (기본값: 30)
MIN_ARXIV_PAPERS=30

# 최소 기업 참여율 (기본값: 0.20)
MIN_COMPANY_RATIO=0.20

# ===== RAG 설정 (Optional) =====
# RAG 최대 호출 횟수 (기본값: 10)
RAG_MAX_CALLS=10

# RAG 상위 K개 결과 (기본값: 5)
RAG_TOP_K=5

# RAG 청크 크기 (기본값: 1000)
RAG_CHUNK_SIZE=1000

# RAG 청크 오버랩 (기본값: 200)
RAG_CHUNK_OVERLAP=200

# ===== 병렬 처리 설정 (Optional) =====
# 최대 워커 수 (기본값: 3)
MAX_WORKERS=3

# ===== 로깅 설정 (Optional) =====
# 로그 레벨 (기본값: INFO)
LOG_LEVEL=INFO
